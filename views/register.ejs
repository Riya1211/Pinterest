<%include ./partials/header.ejs %>
<div class="main w-full h-screen bg-cover bg-center bg-[url(https://images.unsplash.com/photo-1588097211669-71cefc744956?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
    <div class="w-[29vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 capitalize  tracking-tighter leading-none mb-10">Create New Account</h1>
      <form action="/register" method="post">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="name">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact number">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="block border-2 rounded-full mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.</p>
      </form>
      <a href="/" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Login Existing Account</a>
    </div>
  </div>
<%include ./partials/footer.ejs %>